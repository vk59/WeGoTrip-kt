<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="BlueButton">
        <item name="android:tint">@color/dark_blue</item>
    </style>

    <style name="BlackButton">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="GreyButton">
        <item name="android:tint">@color/dark_grey</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TitleAudioTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="StepNumberTextStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>